<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:layout_marginStart="12dp"
    android:backgroundTint="?attr/colorSurface"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="270dp"
            android:scaleType="fitXY"
            android:src="@drawable/landing_page_bg"
            android:layout_marginBottom="-20dp"
            android:layout_marginLeft="-20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/headingAnnouncement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20% on All SUV Rentals!"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/subHeadingAnnouncement"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Book now and save big on your next ride!"
            android:fontFamily="@font/quicksand_regular"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="12sp"
            android:gravity="end"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/headingAnnouncement"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book now!"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="12dp"
            android:textColor="#EEEEEE"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
