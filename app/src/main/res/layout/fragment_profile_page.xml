<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp"
    android:paddingVertical="24dp"
    tools:context=".view.mainPage.ProfilePageFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/vehicle"
        android:background="?attr/colorPrimary"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Brandon Lambino"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="18sp"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/profileImage"
        app:layout_constraintStart_toEndOf="@id/profileImage"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="johnbrandonlambino123@gmail.com"
        android:fontFamily="@font/quicksand_regular"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSecondary"
        app:layout_constraintBottom_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="@id/name"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCOUNT"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="18sp"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon"
            app:tint="#E2B34B"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit profile"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="14sp"
            android:layout_marginStart="14dp"
            android:textColor="?attr/colorOnSecondary"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ln1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon"
            app:tint="#EC8585"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="14sp"
                android:layout_marginStart="14dp"
                android:textColor="?attr/colorOnSecondary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add or remove your address."
                android:fontFamily="@font/quicksand_regular"
                android:textSize="14sp"
                android:layout_marginStart="14dp"
                android:textColor="?attr/colorOnSurfaceVariant"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ln2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon"
            app:tint="#85BBEC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment method"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="14sp"
                android:layout_marginStart="14dp"
                android:textColor="?attr/colorOnSecondary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 cards are available."
                android:fontFamily="@font/quicksand_regular"
                android:textSize="14sp"
                android:layout_marginStart="14dp"
                android:textColor="?attr/colorOnSurfaceVariant"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ln3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon"
            app:tint="#44CACA"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact number"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="14sp"
                android:layout_marginStart="14dp"
                android:textColor="?attr/colorOnSecondary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add or remove your contact number."
                android:fontFamily="@font/quicksand_regular"
                android:textSize="14sp"
                android:layout_marginStart="14dp"
                android:textColor="?attr/colorOnSurfaceVariant"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="18sp"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ln9"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ln4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon"
            app:tint="#4A90E2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark mode"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="14sp"
            android:layout_marginStart="14dp"
            android:textColor="?attr/colorOnSecondary"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/twoFactorAuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ln4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon"
            app:tint="#00AE06"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two factor authentication"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="14sp"
            android:layout_marginStart="14dp"
            android:textColor="?attr/colorOnSecondary"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUPPORT"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="18sp"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/twoFactorAuth"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ln6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon"
            app:tint="#5C62EF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact us"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="14sp"
            android:layout_marginStart="14dp"
            android:textColor="?attr/colorOnSecondary"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ln6">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon"
            app:tint="#CB9C33"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="14sp"
            android:layout_marginStart="14dp"
            android:textColor="?attr/colorOnSecondary"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTHERS"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="18sp"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ln7"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ln8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon"
            app:tint="#F24E1E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="14sp"
            android:layout_marginStart="14dp"
            android:textColor="?attr/colorOnSecondary"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>