<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="24dp"
    android:layout_marginHorizontal="16dp"
    tools:context=".ui.view.profile.TwoFactorAuthCompletedFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/check_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two-Factor\nAuthentication\nEnabled"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:textSize="40sp"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="?attr/colorOnPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your account is now extra secure. Youâ€™ll need a verification code when logging in."
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:fontFamily="@font/quicksand_regular"
            android:textColor="?attr/colorOnSecondary"/>

    </LinearLayout>

    <Button
        android:id="@+id/continueToHomePageBtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Continue to home page"
        android:textSize="16sp"
        android:textColor="#EEEEEE"
        android:background="@drawable/border_radius"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>