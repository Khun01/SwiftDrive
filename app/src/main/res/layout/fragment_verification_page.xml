<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.auth.VerificationPageFragment">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        app:tint="?attr/colorOnPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textSize="40sp"
        android:textColor="?attr/colorOnPrimary"
        android:fontFamily="@font/quicksand_bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/backArrow"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please wait for the code to be submit"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSecondary"
        android:fontFamily="@font/quicksand_regular"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/paragraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the verification code sent to your email to reset your password."
        android:textSize="16sp"
        android:textColor="?attr/colorOnSecondary"
        android:fontFamily="@font/quicksand_bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/subheading"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/paragraph">

        <EditText
            android:id="@+id/code1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:textSize="18sp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginEnd="8dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="?attr/colorSurface"/>

        <EditText
            android:id="@+id/code2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:textSize="18sp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginEnd="8dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="?attr/colorSurface"/>

        <EditText
            android:id="@+id/code3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:textSize="18sp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginEnd="8dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="?attr/colorSurface"/>

        <EditText
            android:id="@+id/code4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:textSize="18sp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginEnd="8dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="?attr/colorSurface"/>

        <EditText
            android:id="@+id/code5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:textSize="18sp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginEnd="8dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="?attr/colorSurface"/>

        <EditText
            android:id="@+id/code6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:textSize="18sp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:background="@drawable/border_radius"
            android:backgroundTint="?attr/colorSurface"/>

    </LinearLayout>

    <Button
        android:id="@+id/submitOtp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Submit OTP"
        android:textSize="16sp"
        android:textColor="#EEEEEE"
        android:background="@drawable/border_radius"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/ll"/>


</androidx.constraintlayout.widget.ConstraintLayout>